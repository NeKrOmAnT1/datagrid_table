<Window x:Class="Test2.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2"
        mc:Ignorable="d"
        Title="Добавить" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <TextBlock Text="Имя:" Margin="10"/>
        <TextBox  x:Name="tb_firstname" Margin="10"/>
        <TextBlock Text="Фамилия:" Margin="10"/>
        <TextBox x:Name="tb_lastname" Margin="10"/>
        <Button Name="btn_add"  Content="Добавить" Click="btn_add_Click"  Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
